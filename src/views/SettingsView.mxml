<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		actionBarVisible="true"
		initialize="onInitialize()"
		xmlns:s="library://ns.adobe.com/flex/spark" >
	<fx:Script>
		<![CDATA[
			import model.ModelLocator;
			[ResourceBundle("settingsview")]
			
			private function onInitialize():void {
				title = ModelLocator.resourceManagerInstance.getString('settingsview','title');
			}
			
			protected function hgroup1_clickHandler(event:MouseEvent):void
			{
				navigator.pushView(LoggingView);
			}
			
		]]>
	</fx:Script>
	<s:VGroup click="hgroup1_clickHandler(event)" width="100%">
		<s:Label id="logviewlabel" text = "{ModelLocator.resourceManagerInstance.getString('settingsview','show_logging')}"
				 width="100%" paddingLeft="3" paddingRight="3" paddingTop="20" paddingBottom="10" fontSize="24" fontWeight="bold"/>
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="0xFFFFFF" weight="1"/>
			</s:stroke>
		</s:Line>	
	</s:VGroup>
	
</s:View>

